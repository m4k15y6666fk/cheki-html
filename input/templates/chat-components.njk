
{% macro message_from(icon="/assets/img/icon/1.png", name="Alice", message='message', time='0:00') %}
<!-- 相手のメッセージ -->
<div class="line__left">
    {% if icon.length > 0 %}
    <figure>
        <img src="{{ icon }}">
    </figure>
    {% endif %}

    <div class="line__left-text">
        {% if name.length > 0 %}
        <div class="name">{{ name }}</div>
        {% endif %}

        <div class="text">{{ message }}</div>

        {% if time.length > 0 %}
        <span class="date">{{ time }}</span>
        {% endif %}
    </div>
</div>
{% endmacro %}


