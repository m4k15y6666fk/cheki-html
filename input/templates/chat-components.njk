{% macro message_to(message='message', read=true, time='0:00') %}
<!-- 自分のメッセージ -->
<div class="line__right">
    <div class="text">{{ message }}</div>

    {% if time.length > 0 %}
    <span class="date">{{ "既読" if read else "" }}<br>{{ time }}</span>
    {% endif %}
</div>
{% endmacro %}


